# GitHub OAuth Application settings
# You can create a new OAuth app here: https://github.com/settings/developers
CA_GITHUB_CLIENT_ID=your_github_client_id
CA_GITHUB_CLIENT_SECRET=your_github_client_secret

# The base URL of your application, used for OAuth redirect URIs
# For local development, this will typically be http://localhost:5173
# For production, set this to the public URL of your backend (e.g., the App Engine
# hostname shown as `defaultHostname` via `gcloud app describe`, such as
# https://creative-atlas.uc.r.appspot.com)
APP_BASE_URL=http://localhost:5173

# Session configuration
# Generate a strong secret (e.g., `openssl rand -hex 32`) before deploying to production
SESSION_SECRET=change_me

# Gemini API configuration
GEMINI_API_KEY=your_gemini_api_key

# Telemetry & monitoring
# Set ENABLE_GCP_LOGGING=true in deployed environments to forward structured logs to Cloud Logging.
ENABLE_GCP_LOGGING=false
# Override the default log name when multiple environments share a project.
OPERATIONS_LOG_NAME=creative-atlas-operations
# Warn when requests exceed this latency (milliseconds); defaults to 2000 when unset.
REQUEST_WARNING_THRESHOLD_MS=2000
